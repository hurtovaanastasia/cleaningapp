<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Статус -->
        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="В ожидании"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <!-- Информация о заявке -->
        <TextView
            android:id="@+id/tv_order_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Имя: Иван Иванов\nТелефон: +79123456789"
            android:textSize="14sp"/>

        <!-- Услуга -->
        <TextView
            android:id="@+id/tv_order_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Услуга: Генеральная уборка"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>

        <!-- Дата и время -->
        <TextView
            android:id="@+id/tv_order_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20.12.2025 в 14:00"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"/>

        <!-- Кнопки действий (только для pending) -->
        <LinearLayout
            android:id="@+id/layout_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Принять"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn_reject"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Отклонить"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>